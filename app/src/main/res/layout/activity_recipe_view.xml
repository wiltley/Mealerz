<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Recipe.RecipeView">

    <ImageView
        android:id="@+id/foodImage2"
        android:layout_width="407dp"
        android:layout_height="192dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/foodDescription2"
        android:layout_width="407dp"
        android:layout_height="120dp"
        android:layout_marginStart="3dp"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage2" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ingredientsScroll"
        android:layout_width="409dp"
        android:layout_height="412dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodDescription2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:layout_height="412dp"
                android:text="Ingredients" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>