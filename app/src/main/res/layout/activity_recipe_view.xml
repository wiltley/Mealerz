<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_one"
    tools:context=".ui.Recipe.RecipeView">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="174dp"
        android:layout_height="59dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="Name"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="105dp"
        android:layout_height="59dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="Price"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/foodImage2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="133dp"
        android:layout_height="60dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="4dp"
        android:text="Cuisine Type"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage2" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage2" />

    <ImageView
        android:id="@+id/foodImage2"
        android:layout_width="405dp"
        android:layout_height="214dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/foodDescription2"
        android:layout_width="405dp"
        android:layout_height="192dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="64dp"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage2" />


    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/btm_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:clipToPadding="false"
            app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cookIsOffered"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginStart="3dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodDescription2" />

    <Button
        android:id="@+id/submitOffer"
        android:layout_width="112dp"
        android:layout_height="48dp"
        android:text="SUBMIT"
        app:layout_constraintStart_toEndOf="@+id/cookIsOffered"
        app:layout_constraintTop_toBottomOf="@+id/foodDescription2" />

</androidx.constraintlayout.widget.ConstraintLayout>