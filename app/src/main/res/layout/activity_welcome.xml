<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome1constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_one"
    tools:context=".ui.welcome.WelcomeActivity">

    <TextView
        android:id="@+id/welcome1"
        android:layout_width="370dp"
        android:layout_height="124dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="35dp"
        android:text="Welcome! Select which type of user you are."
        android:textColor="#eeaf61"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clientButton"
        android:layout_width="167dp"
        android:layout_height="94dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="22dp"
        android:text="CLIENT"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/cookButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome1" />

    <Button
        android:id="@+id/cookButton"
        android:layout_width="178dp"
        android:layout_height="94dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="21dp"
        android:text="COOK"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/clientButton"
        app:layout_constraintTop_toBottomOf="@+id/welcome1" />
</androidx.constraintlayout.widget.ConstraintLayout>